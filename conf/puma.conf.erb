directory       '<%=ENV['OPENSHIFT_REPO_DIR']%>'
rackup          '<%=ENV['OPENSHIFT_REPO_DIR']%>/config.ru'
environment     'production'
pidfile         '<%=ENV['OPENSHIFT_PUMA_DIR']%>/run/puma.pid'
state_path      '<%=ENV['OPENSHIFT_PUMA_DIR']%>/run/puma.state'
stdout_redirect '<%=ENV['OPENSHIFT_PUMA_DIR']%>/logs/puma.log','<%=ENV['OPENSHIFT_PUMA_DIR']%>/logs/puma_error.log'
threads         <%=ENV['OPENSHIFT_PUMA_MIN_THREAD']%>,<%=ENV['OPENSHIFT_PUMA_MAX_THREAD']%>
bind            'tcp://<%=ENV['OPENSHIFT_RUBY_IP']%>:<%=ENV['OPENSHIFT_RUBY_PORT']%>'
daemonize
